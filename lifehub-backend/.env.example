PORT=4000

# Postgres (Neon)
# DATABASE_URL should be pooled connection string.
# DIRECT_URL should be non-pooled direct connection string.
DATABASE_URL=postgresql://<user>:<password>@<pooled-host>/<db>?sslmode=require&pgbouncer=true
DIRECT_URL=postgresql://<user>:<password>@<direct-host>/<db>?sslmode=require
# Auth
JWT_SECRET=<long-random-secret>
JWT_REFRESH_SECRET=<long-random-secret>
JWT_EXPIRES_IN=15m

# CORS
CORS_ORIGINS=http://localhost:5173,https://<your-vercel-domain>.vercel.app

# Redis (Upstash)
REDIS_URL=rediss://default:<password>@<host>:<port>

# Event pipeline
ENABLE_REDIS_EVENT_PIPELINE=true
ENABLE_KAFKA=false
KAFKA_CLIENT_ID=lifehub
KAFKA_BROKERS=localhost:9092
KAFKA_WORKFLOW_TOPIC_PREFIX=workflow

# Workflow defaults
ORDER_WORKFLOW_ID=1
SERVICE_WORKFLOW_ID=1
WORKFLOW_WORKER_CONCURRENCY=8
MEDIA_WORKER_CONCURRENCY=4
NOTIFICATION_SCAN_INTERVAL_MS=5000
NOTIFICATION_BATCH_SIZE=100

# Media local
MEDIA_STORAGE_PROVIDER=local
MEDIA_UPLOAD_BASE_URL=http://localhost:4000/upload
MEDIA_CDN_BASE_URL=http://localhost:4000/cdn

# Payments
PAYMENT_INTENT_TTL_SECONDS=86400
DEFAULT_MERCHANT_UPI_ID=merchant@upi
DELIVERY_OTP_TTL_SECONDS=900

# Razorpay (optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Optional notification provider config
SMS_GATEWAY_URL=
SMS_GATEWAY_TOKEN=
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@lifehub.local
PUSH_GATEWAY_URL=
PUSH_GATEWAY_TOKEN=
