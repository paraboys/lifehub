PORT=4000

# Postgres (Neon)
# DATABASE_URL should be pooled connection string.
# DIRECT_URL should be non-pooled direct connection string.
DATABASE_URL=postgresql://<user>:<password>@<host>/<db>?sslmode=require
DIRECT_URL=postgresql://<user>:<password>@<host>/<db>?sslmode=require
# Auth
JWT_SECRET=replace_with_long_random_secret
JWT_REFRESH_SECRET=replace_with_long_random_refresh_secret
JWT_EXPIRES_IN=15m

# CORS
CORS_ORIGINS=http://localhost:5173,https://lifehub-zeta.vercel.app

# Redis (Upstash)
REDIS_URL=redis://localhost:6379

# Event pipeline
ENABLE_REDIS_EVENT_PIPELINE=true
ENABLE_KAFKA=false
KAFKA_CLIENT_ID=lifehub
KAFKA_BROKERS=localhost:9092
KAFKA_WORKFLOW_TOPIC_PREFIX=workflow

# Workflow defaults
ORDER_WORKFLOW_ID=1
SERVICE_WORKFLOW_ID=1
WORKFLOW_WORKER_CONCURRENCY=8
MEDIA_WORKER_CONCURRENCY=4
NOTIFICATION_SCAN_INTERVAL_MS=5000
NOTIFICATION_BATCH_SIZE=100

# Media local
MEDIA_STORAGE_PROVIDER=local
# Public base URL for media links behind proxy/CDN (recommended in production)
MEDIA_PUBLIC_BASE_URL=https://lifehub-tqi5.onrender.com
MEDIA_UPLOAD_BASE_URL=http://localhost:4000/upload
MEDIA_CDN_BASE_URL=http://localhost:4000/cdn

# Payments
PAYMENT_INTENT_TTL_SECONDS=86400
DEFAULT_MERCHANT_UPI_ID=merchant@upi
DELIVERY_OTP_TTL_SECONDS=900

# Razorpay (optional)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=
# RazorpayX (optional, needed for external payouts)
RAZORPAYX_KEY_ID=
RAZORPAYX_KEY_SECRET=
RAZORPAYX_ACCOUNT_NUMBER=

# Optional notification provider config
# OTP + SMS
OTP_TTL_SECONDS=300
OTP_RESEND_COOLDOWN_SECONDS=45
OTP_HASH_SECRET=
DEFAULT_PHONE_COUNTRY_CODE=+91
SMS_PROVIDER=TWILIO
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1XXXXXXXXXX
# Generic SMS connector (only when SMS_PROVIDER != TWILIO)
SMS_GATEWAY_URL=
SMS_GATEWAY_TOKEN=
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@lifehub.local
PUSH_GATEWAY_URL=
PUSH_GATEWAY_TOKEN=
